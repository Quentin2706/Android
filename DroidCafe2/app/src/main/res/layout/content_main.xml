<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <TextView
        android:id="@+id/textintro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Les Desserts du CafÃ©"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/donut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/mg_top"
        android:contentDescription="@string/donut_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textintro"
        android:onClick="showDonutOrder"
        app:srcCompat="@drawable/donut_circle" />

    <TextView
        android:layout_height="@+id/donut"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="10dp"
        android:text="@string/donut_desc"
        app:layout_constraintBottom_toBottomOf="@+id/donut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/donut"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@+id/donut"
        android:layout_width="@+id/donut"/>


    <ImageView
        android:id="@+id/icecream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/mg_top"
        android:contentDescription="@string/icecream_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donut"
        android:onClick="showIcecreamOrder"
        app:srcCompat="@drawable/icecream_circle" />

    <TextView
        android:layout_height="@+id/icecream"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="10dp"
        android:text="@string/icecream_desc"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/icecream"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icecream"
        app:layout_constraintTop_toTopOf="@+id/icecream"
        android:layout_width="@+id/icecream"/>

    <ImageView
        android:id="@+id/froyo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/mg_top"
        android:contentDescription="@string/froyo_desc"
        android:onClick="showFroyoOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icecream"
        app:srcCompat="@drawable/froyo_circle" />

    <TextView
        android:layout_height="@+id/froyo"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="10dp"
        android:text="@string/froyo_desc"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/froyo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/froyo"
        app:layout_constraintTop_toTopOf="@+id/froyo"
        android:layout_width="@+id/froyo"/>


</androidx.constraintlayout.widget.ConstraintLayout>